generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  CONSUMER
  COMPANY_OWNER
  COMPANY_ADMIN
  SUPER_ADMIN
}

enum UserStatus {
  ACTIVE
  DISABLED
}

model User {
  id               String      @id @default(uuid())
  email            String      @unique
  passwordHash     String      @map("password")
  name             String?
  roles            UserRole[]  @default([CONSUMER])
  status           UserStatus  @default(ACTIVE)
  refreshTokenHash String?
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt

  @@map("users")
}
